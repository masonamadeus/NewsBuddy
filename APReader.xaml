<Window x:Class="NewsBuddy.APReader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewsBuddy"
        mc:Ignorable="d"
        Title="APReader"
        SizeToContent="WidthAndHeight">
    <Grid>
        <ListBox x:Name="list_APStories" MaxHeight="500" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    </Grid>
    <Window.Resources>
    <DataTemplate DataType="{x:Type local:APObject}">
        <TextBlock Text="{Binding headline}" ToolTip="{Binding uri}"/>
    </DataTemplate>
    </Window.Resources>
</Window>
