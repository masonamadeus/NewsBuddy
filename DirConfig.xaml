<Window x:Class="NewsBuddy.DirConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewsBuddy"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterOwner"
        Background="DimGray"
        MinHeight="320"
        MinWidth="450"     
        Title="NewsJock Settings" Height="300" Width="400">
    <Grid>
    <DockPanel>
            <StackPanel DockPanel.Dock="Top">
                <TextBlock HorizontalAlignment="Center" Margin="0,5,0,0" Padding="3">Select the locations where you will store your Sounders, Clips, and Scripts.</TextBlock>
                <TextBlock Padding="3" Background="Gray" FontSize="10" FontStyle="Italic" Margin="5,5,5,0" TextWrapping="Wrap" HorizontalAlignment="Center">TIP: Use a shared/network drive for your Clips and Scripts, but a local drive for your Sounders.</TextBlock>
                <TextBlock Padding="3" Background="Gray" FontSize="10" FontStyle="Italic" Margin="5,0,5,10" TextWrapping="Wrap" HorizontalAlignment="Center">If you specify a location that does not exist, NewsJock will create a folder for you.</TextBlock>
                <Separator Margin="30,0,30,5"></Separator>
                <Label>Sounders folder:</Label>
                <WrapPanel>
                    <TextBox x:Name="selDirSounder" Margin="10,0,10,0"  TextWrapping="NoWrap" AcceptsReturn="False" Width="300"/>
                    <Button x:Name="srchSounder" Click="srchSounder_Click">Select Folder</Button>
                </WrapPanel>
                
                <Label>Clips folder:</Label>
                <WrapPanel>
                    <TextBox x:Name="selDirClip" Margin="10,0,10,0"  TextWrapping="NoWrap" AcceptsReturn="False" Width="300"/>
                    <Button x:Name="srchClip" Click="srchClip_Click">Select Folder</Button>
                </WrapPanel>
                <Label>Scripts folder:</Label>
                <WrapPanel>
                    <TextBox x:Name="selDirScript" Margin="10,0,10,0"  TextWrapping="NoWrap" AcceptsReturn="False" Width="300" />
                    <Button x:Name="srchScript" Click="srchScript_Click">Select Folder</Button>
                </WrapPanel>
            </StackPanel>
        <WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="0,20,10,0">
            
            <Button Padding="5" Name="okButton" Click="okButton_Click" IsDefault="True" Margin="5">OK</Button>
           
            <Button Padding="5" Name="cancelButton" Margin="5" Click="cancelButton_Click">Cancel</Button>
            
        </WrapPanel>
    </DockPanel>

    </Grid>
</Window>
