<Window x:Class="NewsBuddy.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewsBuddy"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="Loading" Height="40" Width="300"
        
        ResizeMode="NoResize"
        Closed="Window_Closed">
    <Grid>
        <ProgressBar x:Name="progBar" Width="300" IsIndeterminate="True"></ProgressBar>
        <Label x:Name="progDesc" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Please wait."></Label>
    </Grid>
</Window>
