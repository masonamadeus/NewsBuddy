<Window x:Class="NewsBuddy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewsBuddy"
        mc:Ignorable="d"
        Title="NewsJock v0.1" Height="450" Width="800" Background="Gray"
        FontFamily="{StaticResource OpenSans}">
    <DockPanel>
        <MediaElement x:Name="SoundersPlayer" Source="{Binding}" LoadedBehavior="Manual" UnloadedBehavior="Manual"/>
        <MediaElement x:Name="ClipsPlayer" Source="{Binding}" LoadedBehavior="Manual" UnloadedBehavior="Manual"/>

        <Menu DockPanel.Dock="Top"
              Padding="2"
              Margin="0,0,0,3">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Name="mnOpen" Click="mnOpen_Click"/>
                <MenuItem Header="_New...">
                    <MenuItem Header="New _Blank Script"/>
                    <MenuItem Header="New Script from _Template"/>
                </MenuItem>
                <MenuItem Header="_Save"/>
                <MenuItem Header="Save _As...">
                    <MenuItem Name="mnSaveNewScript" Header="New Script" Click="mnSaveNewScript_Click"/>
                    <MenuItem Header="New Script Template"/>
                </MenuItem>
                <Separator/>
                <MenuItem Name="mnExit" Header="Exit" Click="mnExit_Click"/>
            </MenuItem>

            <MenuItem Header="_Edit">
                <MenuItem Header="Settings">
                    <MenuItem x:Name="mnNJSettings" Header="NewsJock Settings" Click="mnNJSettings_Click"/>
                    <MenuItem Name="mnWebSettings" Header="Web Browser Settings" Click="mnWebSettings_Click"/>
                    <MenuItem x:Name="mnResetSettings" Header="Reset Settings (Debug)" Click="mnResetSettings_Click"/>
                </MenuItem>


            </MenuItem>
        </Menu>
        
        
        <StackPanel Name ="stackL" DockPanel.Dock="Left" MinWidth="100" MaxWidth="300">
            <StackPanel Background="LightSlateGray">
            <Label Name="lblSounders" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold">Sounders</Label>
            <TextBlock HorizontalAlignment="Center" Background="DimGray">Volume</TextBlock>
            <Slider Background="DimGray" Name="sVolSlider" VerticalAlignment="Center" ValueChanged="sVolSlider_ValueChanged" Minimum="0" Maximum="1" Value="0.5" IsMoveToPointEnabled="True" />
            <ListBox x:Name="listSounders" Background="LightGray" MouseMove="listSounders_MouseMove" Focusable="False" Margin="0,0,0,5">
            </ListBox>
            </StackPanel>
            <Separator Height="10" Margin="0,0,0,0"></Separator>
            <StackPanel Background="ForestGreen">
                <Label Name="lblClips" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold">Clips</Label>
            <TextBlock HorizontalAlignment="Center" Background="DimGray">Volume</TextBlock>
                <Slider Background="DimGray" Name="cVolSlider" VerticalAlignment="Center" ValueChanged="cVolSlider_ValueChanged" Minimum="0" Maximum="1" Value="0.5" IsMoveToPointEnabled="True"/>
                <ListBox Name="listClips" Background="LightGray" MouseMove="listClips_MouseMove" Margin="0,0,0,5"></ListBox>
            </StackPanel>
        </StackPanel>
        
        
        <StackPanel Name="stackR" DockPanel.Dock="Right">


        </StackPanel>
        <TabControl Name="DynamicTabs" ItemsSource="{Binding}" SelectionChanged="DynamicTabs_SelectionChanged">
            <TabControl.Resources>
                <DataTemplate x:Key="TabHeader" DataType="TabItem">
                    <DockPanel>
                        <Button Name="btnDelTab" DockPanel.Dock="Right" Margin="5,0,0,0"
                                    Padding="0" Click="btnDelTab_Click"
                                    CommandParameter="{Binding RelativeSource=
                                        {RelativeSource AncestorType=
                                        {x:Type TabItem}}, Path=Name}">
                            X
                        </Button>
                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type TabItem}}, Path=Header}" />
                    </DockPanel>
                </DataTemplate>
            </TabControl.Resources>
        </TabControl>

     <!--  <Frame Source="/Script.xaml" Name="mainFrame" Focusable="False">
       </Frame> -->


        <!-- <RichTextBox Name="Script1" AllowDrop="True">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox> -->
        
    
    </DockPanel>







    <Window.Resources>

        
        <DataTemplate DataType="{x:Type local:NBfile}">
                <TextBlock Text="{Binding NBName}" />
        </DataTemplate>

    </Window.Resources>


</Window>