<Window x:Class="NewsBuddy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewsBuddy"
        mc:Ignorable="d"
        Title="NewsJock v0.1" Height="450" Width="800" Background="Gray"
        FontFamily="{StaticResource OpenSans}">
    <DockPanel HorizontalAlignment="Stretch">
        <MediaElement x:Name="SoundersPlayer" Source="{Binding}" LoadedBehavior="Manual" UnloadedBehavior="Manual"
                      MediaOpened="TimerSounders"/>
        <MediaElement x:Name="ClipsPlayer" Source="{Binding}" LoadedBehavior="Manual" UnloadedBehavior="Manual"
                      MediaOpened="TimerClips"/>

        <Menu DockPanel.Dock="Top"
              Padding="2"
              Margin="0,3,0,3"
              HorizontalAlignment="Stretch"
              FontFamily="{StaticResource OpenSans}"
              FontSize="16"
              >
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel HorizontalAlignment="Stretch"/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>




            <MenuItem HorizontalAlignment="Right">
                <MenuItem.Icon>
                    <TextBlock FontFamily="{StaticResource FA}"></TextBlock>
                </MenuItem.Icon>
                <MenuItem x:Name="mnNJSettings" Header="NewsJock Settings" Click="mnNJSettings_Click"/>
                <MenuItem Name="mnWebSettings" Header="Web Browser Settings" Click="mnWebSettings_Click"/>
                <MenuItem x:Name="mnResetSettings" Header="Reset Settings (Debug)" Click="mnResetSettings_Click"/>



            </MenuItem>


        </Menu>

        <ScrollViewer DockPanel.Dock="Left" VerticalScrollBarVisibility="Visible" Width="215" HorizontalAlignment="Left" Style="{StaticResource LeftScrollViewer}">
        <StackPanel Name ="stackL" Width="200">
            <StackPanel Background="LightSlateGray">
                <Label Name="lblSounders" HorizontalAlignment="Center" FontSize="20" FontStyle="Italic" FontWeight="Bold" ToolTip="Double-click this to open your Sounders folder." MouseDoubleClick="lblSounders_MouseDoubleClick">Sounders</Label>
                    <WrapPanel Name="SoundersControl" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button Name="btnStopSounders" FontFamily="{StaticResource FA}" Click="btnStopSounders_Click" Foreground="DarkRed" Padding="4" Margin="0,0,10,0" Content=""/>
                        <TextBlock x:Name="sndrTimeLeft" HorizontalAlignment="Center" FontWeight="Bold" FontSize="16">0:00</TextBlock>
                    </WrapPanel>    
                    

                
                <Label FontFamily="{StaticResource FA}" HorizontalAlignment="Center"></Label>
                <Slider Background="DimGray" Name="sVolSlider" VerticalAlignment="Center" ValueChanged="sVolSlider_ValueChanged" Minimum="0" Maximum="1" Value="0.5" IsMoveToPointEnabled="True" />
                <ListBox x:Name="listSounders" Background="LightGray" MouseMove="listSounders_MouseMove" Focusable="False" Margin="0,0,0,5" PreviewMouseWheel="HandlePreviewMouseWheel">
                </ListBox>
            </StackPanel>
            <Separator Height="10" Margin="0,5,0,5"></Separator>
            <StackPanel Background="DarkSeaGreen">
                <Label Name="lblClips" HorizontalAlignment="Center" FontSize="20" FontStyle="Italic" FontWeight="Bold" ToolTip="Double-click this to open your Clips folder." MouseDoubleClick="lblClips_MouseDoubleClick">Clips</Label>
                    <WrapPanel Name="ClipsControl" HorizontalAlignment="Center" Visibility="Collapsed" VerticalAlignment="Center">
                <Button Name="btnStopClips" FontFamily="{StaticResource FA}" Click="btnStopClips_Click" Foreground="DarkRed" Padding="4" Margin="0,0,10,0" Content=""/>
                <TextBlock x:Name="clipTimeLeft" HorizontalAlignment="Center" FontWeight="Bold" FontSize="16">0:00</TextBlock>
                    </WrapPanel>
                
                <Label FontFamily="{StaticResource FA}" HorizontalAlignment="Center"></Label>
                <Slider Background="DimGray" Name="cVolSlider" VerticalAlignment="Center" ValueChanged="cVolSlider_ValueChanged" Minimum="0" Maximum="1" Value="0.5" IsMoveToPointEnabled="True"/>

                    <ListBox Name="listClips" Background="LightGray" MouseMove="listClips_MouseMove" Margin="0,0,0,5" PreviewMouseWheel="HandlePreviewMouseWheel"></ListBox>
            </StackPanel>
            <Separator Height ="10" Margin="0,5,0,5"/>
            
            
            <StackPanel Background="DarkGray">
                
                <Label Name="lblScripts" HorizontalAlignment="Center" FontSize="20" FontStyle="Italic" FontWeight="Bold" MouseDoubleClick="lblClips_MouseDoubleClick" ToolTip="Double-click this to open your Scripts folder">Scripts</Label>

                    <ToggleButton x:Name="scriptsVisible" FontFamily="{StaticResource FA}" Content=""/>
                    <Label FontStyle="Italic" HorizontalAlignment="center" Content="Double-click to Open" Visibility="{Binding ElementName=scriptsVisible, Converter={StaticResource BooleanToVisibilityConverter}, Path=IsChecked}"></Label>
                    <ListBox Name="listScripts" Visibility="{Binding ElementName=scriptsVisible, Converter={StaticResource BooleanToVisibilityConverter}, Path=IsChecked}" Background="LightGray" Margin="0,0,0,5" MouseDoubleClick="listScripts_MouseDoubleClick" PreviewMouseWheel="HandlePreviewMouseWheel"></ListBox>
            </StackPanel>
        </StackPanel>
        </ScrollViewer>

        <StackPanel Name="stackR" DockPanel.Dock="Right">


        </StackPanel>
        <TabControl Name="DynamicTabs" ItemsSource="{Binding}">
            <TabControl.Resources>
                <DataTemplate x:Key="TabHeader" DataType="TabItem">
                    <DockPanel>
                        <Button Name="btnDelTab" DockPanel.Dock="Right" Margin="5,0,0,0"
                                    Padding="0" Click="btnDelTab_Click"
                                    CommandParameter="{Binding RelativeSource=
                                        {RelativeSource AncestorType=
                                        {x:Type TabItem}}, Path=Name}"
                                FontFamily="{StaticResource FA}"
                                Foreground="DarkRed"
                                Background="Transparent"
                                BorderBrush="Transparent">
                            
                        </Button>
                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type TabItem}}, Path=Header}" />
                    </DockPanel>
                </DataTemplate>
            </TabControl.Resources>
        </TabControl>

    </DockPanel>







    <Window.Resources>


        <DataTemplate DataType="{x:Type local:NBfile}">
            <TextBlock Text="{Binding NBName}" />
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:ScriptFile}">
            <TextBlock Text="{Binding SCname}"/>
        </DataTemplate>



    </Window.Resources>


</Window>