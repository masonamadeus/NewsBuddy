<Page x:Class="NewsBuddy.ScriptTemplate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NewsBuddy"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ScriptTemplate">
    <Page.Resources>
        <DataTemplate x:Key="scriptPage">
            <DockPanel>
                <WrapPanel DockPanel.Dock="Top" Background="LightGray">

                </WrapPanel>
                <RichTextBox x:Name="rtbScript" AllowDrop="True">

                    <FlowDocument>

                        <Paragraph>

                            <Run Text="RichTextBox"/>

                        </Paragraph>

                    </FlowDocument>

                </RichTextBox>



            </DockPanel>

        </DataTemplate>
    </Page.Resources>
</Page>
